page {
  background-color: #f5f5f5;
}

.swiper {
  height: 400rpx;
  width: 100%;
}

.swiper-image {
  height: 100%;
  width: 100%;
}

.li {
  /* flex: 1; */
  width: 250rpx;
  box-sizing: border-box;
  padding: 10rpx;
  display: inline-block;
}

.li .small {
  width: 100%;
}

.li .small image {
  width: 100%;
  height: 132rpx;
}

.size, .price {
  width: 100%;
  display: block;
  text-align: center;
  /* margin: 20rpx 0; */
  height: 40rpx;
  font-size: 30rpx;
}

.price {
  color: #f00;
}

.menu_pic {
  overflow: hidden;
  margin: 10rpx 10rpx 0 10rpx;
  background-color: #fff;
  /* border-left: 1px dashed #ccc; */
  /* border-top: 1px dashed #ccc; */
}

.menu_pic .goods {
  box-sizing: border-box;
  float: left;
  padding: 10rpx;
  /* border-bottom: 1px dashed #ccc; */
  /* border-right: 1px dashed #ccc; */
}

.menu_pic .goods .img {
  height: 200rpx;
}
