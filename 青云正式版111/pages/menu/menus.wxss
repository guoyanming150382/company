/* pages/menu/menus.wxss */
page {
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
}


.swiper {
  height: 400rpx;
  width: 100%;
}
.swiper-image {
  height: 100%;
  width: 100%;
}


image {
  width: 100%;
  height: 500rpx;
}
.js {
  width: 100%;
  line-height: 50rpx;
  font-size: 30rpx;
  text-indent: 2em;
  display: block;
  margin-top: 20rpx;
}
.name {
  font-size: 40rpx;
  line-height: 80rpx;
}

.money {
  margin: 30rpx 0;
}

.btn {
  display: inline-block;
  position: fixed;
  left: 60rpx;
  bottom: 40rpx;
  border: 1px solid #ccc;
  border-radius: 40rpx;
  padding: 20rpx;
}
.btn1 {
  left: 115rpx;
  opacity: 0;
}
.btn2 {
  left: 170rpx;
  opacity: 0;
}
.btn3 {
  left: 225rpx;
  opacity: 0;
}



.h2 {
  width: 100%;
  margin: 50rpx 0;
  line-height: 100rpx;
  text-align: center;
  font-size: 40rpx;
  font-weight: 600;
}
.text {
  display: inline-block;
  float: left;
  text-align: center;
  line-height: 100rpx;
}
input {
  display: inline-block;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  float: left;
  border-bottom: 1px solid #ccc;
}
.input {
  width: 100%;
  padding-left: 120rpx;
}

.button {
  width: 500rpx;
  border-radius: 10rpx;
  text-align: center;
  font-size: 50rpx;
  font-weight: 600;
  background-color: #ddd;
  margin: 66rpx 0;
  margin-left: 125rpx;
}