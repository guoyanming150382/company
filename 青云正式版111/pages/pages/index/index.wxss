/**index.wxss**/
page {
  background-color: #f5f5f5;
  box-sizing: border-box;
}
.swiper {

  width: 100%;

}

.swiper-image {
  height: 100%;
  width: 100%;
}

.menu_fa {
  width: 100%;
  padding: 15rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.menus {
  width: 33.333333%;
  box-sizing: border-box;
  overflow: hidden;
  float: left;
  /* border-left: 1px solid #ccc;  */
  /* border-top: 1px solid #ccc;  */
  margin-top:-1px;
  margin-right: -1px;
}
.menu {
  width: 100%;
  font-size: 30rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  text-align: center;
  background-color: #fff;
  /* border-bottom: 1px solid #ccc;  */
  /* border-right: 1px solid #ccc;  */
}
.menu_fa image {
  width: 30%;
  height: 60rpx;
  /* margin: 20rpx 0; */
}

.li {
  /* flex: 1; */
  width: 250rpx;
  box-sizing: border-box;
  padding: 10rpx;  
  display: inline-block;
}

.li .small {
  width: 100%;
}
.li .small image {
  width: 100%;
  height: 132rpx;
}
.size,.price {
  width: 100%;
  display: block;
  text-align: center;
  /* margin: 20rpx 0; */
  height: 40rpx;
  font-size: 30rpx;
}
.price {
  color: #f00;
}

.menu_pic {
  overflow: hidden;
  margin: 10rpx 10rpx 0 10rpx;
  background-color: #fff;
  border-left: 1px dashed #ccc;
  border-top: 1px dashed #ccc;
}
.menu_pic .goods {
  box-sizing: border-box;
  float: left;
  padding: 10rpx;
  border-bottom: 1px dashed #ccc;
  border-right: 1px dashed #ccc;
  
}
.menu_pic .goods .img {
  height: 200rpx;
}

.text {
  display: block;
  line-height: 50rpx;
  font-size: 30rpx;
  text-indent: 2em;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
}
