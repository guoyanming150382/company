/* pages/user/order.wxss */
page {
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
}


.swiper {
  height: 400rpx;
  width: 100%;
}
.swiper-image {
  height: 100%;
  width: 100%;
}


image {
  width: 100%;
  height: 500rpx;
}
.js {
  width: 100%;
  line-height: 50rpx;
  font-size: 30rpx;
  text-indent: 2em;
  display: block;
  margin-top: 20rpx;
}
.name {
  font-size: 40rpx;
  line-height: 80rpx;
}

.money {
  margin: 30rpx 0;
}


.menu_pic {
  overflow: hidden;
  margin: 10rpx 10rpx 0 10rpx;
  background-color: #fff;
  /* border-left: 1px dashed #ccc; */
  /* border-top: 1px dashed #ccc; */
}

.menu_pic .goods {
  box-sizing: border-box;
  float: left;
  padding: 10rpx;
  /* border-bottom: 1px dashed #ccc; */
  /* border-right: 1px dashed #ccc; */
}

.menu_pic .goods .img {
  height: 200rpx;
}