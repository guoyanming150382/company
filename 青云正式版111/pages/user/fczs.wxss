.weui-cells {
  position: relative;
}
.weui-cell {
  padding: 20rpx 0;
  margin: 0 20rpx 20rpx;
  background-color: #fff;
  border: 1px dashed #ccc;
  border-radius: 40rpx; 
  margin-top:20rpx; 
}
.weui-cell__bd {
  float: left; 
  padding-left: 30rpx;
  font-size: 30rpx;
}
.weui-cell__hd image {
  float: right; 
  margin-right: 20px;
  vertical-align: middle; 
  height: 30rpx;
  width: 50rpx;
}

.weui-cells::after{
  content: none;
  border-bottom: none;
}

.weui-cells::before{
  border-top: none;
}

