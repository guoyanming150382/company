/* pages/index/xiangqing.wxss */
.top{
  width: 100%;
  height: 100rpx;
  /* background: red; */
  padding: 0rpx 30rpx;
  box-sizing: border-box;
  margin-top: 40rpx;
}
.le{
  width: 15%;
  height: 100%;
  float: left;
  /* background: pink; */
  border-radius: 50%;
  overflow: hidden;
}
.le image{
  width: 100%;
  height: 100%;
}
.fa{
  width: 30%;
  height: 100%;
  float: left;
  /* background-color: blue; */
  font-size: 30rpx;
  line-height: 100rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.date{
  width: 55%;
  height: 100%;
  /* background-color: yellow; */
  font-size: 30rpx;
  line-height: 100rpx;
  text-align: right;
  float: right;
}

.top-top{
  width: 100%;
  height: 80rpx;
  padding: 0rpx 30rpx;
  box-sizing: border-box;
  line-height: 80rpx;
  font-size: 30rpx;
}
.left{
  width: 50%;
  height: 100%;
  /* background: red; */
  float: left;
    border-bottom: 1rpx solid #eee;
    text-align:center;
}
.right{
  width: 50%;
  height: 100%;
  /* background: blue; */
  float: right;
    border-bottom: 1rpx solid #eee;
    text-align: right;
}
.left-pic{
  width: 25%;
  height: 100%;
  float: left;
  /* background: pink; */
  padding-top: 10rpx;
  box-sizing: border-box;
}
.left-pic image{
  width: 100%;
  height: 100%;
}
.left-w{
  width: 75%;
  height: 100%;
  float: right;
  /* background: yellow; */
}
.content{
  width: 100%;
  margin-top: 30rpx;
  margin-bottom: 120rpx;
}
.content .word{
  font-size: 30rpx;
  line-height: 1.5em;
  /* letter-spacing: 5rpx; */
  padding: 0rpx 30rpx;
  box-sizing: border-box;
}
.content .tu{
  text-align: center;
margin-top:30rpx;
}
.content .tu image{
  width: 80%;
}
.p{
  width: 100%;
  height: 80rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.p .p1{
  width: 15%;
  height: 100%;
  float: left;
}
.p2{
  float: left;
  width: 50%;
  height: 100%;
}
.p2 image{
  width: 40rpx;
  height: 40rpx;
}
.footer{
  width: 100%;
  height: 100rpx;
  background: #ccc;
  position: fixed;
  bottom: 0rpx;
}
.footer .foot{
  width: 33.33%;
  height: 100%;
  line-height: 100rpx;
  float: left;
  text-align: center;
  font-size: 30rpx;
}
.footer .foot image{
  width: 40rpx;
  height: 40rpx;
}
.footer .foot view{
  float: left;
  height: 100%;
}