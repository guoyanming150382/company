/**index.wxss**/
/* 头像 */
page{
  background: #eee;
  background-image: url(http://d.paper.i4.cn/max/2017/05/31/14/1496213756643_797420.jpg);
  background-size: 100%;
}
 .userinfo {
  background-color: #ffff00;
  height: 180rpx;
  width: 100%;
  margin-bottom: 20rpx;
}
.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  float: left;
  margin-left: 30rpx;
  margin-top: 30rpx;
}

.userinfo-nickname {
  width: 70%;
  height: 120rpx;
  font-size: 35rpx;
  color: #000;
  float: left;
  margin-left: 30rpx;
  line-height: 120rpx;
    margin-top: 30rpx;
}



.project{
  width: 100%;
  height: 100rpx;
  background: #fff;
  border-bottom: 1rpx solid #ddd;
}

.project view{
  width: 13%;
  height: 100%;
  line-height: 100rpx;
  float: left;
  text-align: center;
}
.project view image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 25rpx;
}
.project .w{
  font-size: 35rpx;
  height: 100%;
  width: 50%;
  text-align: left;
}
.project .r{
  float: right;
}
.project .r image{
  width: 30rpx;
  height: 30rpx;
}