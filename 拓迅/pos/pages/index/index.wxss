page {
   background-color: #eee; 
}
.swiper {
  height: 480rpx;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box
}

.swiper-tab{ 
  width: 100%; 
  border-bottom: 2rpx solid #eee; 
   text-align: center;  
  height: 85rpx;
  line-height: 80rpx;
  } 
.swiper-tab-item{ 
   font-size: 30rpx;  
  display: inline-block; 
  width: 170rpx;
} 
.swiper-tab-item:hover {
  font-size: 38rpx;
}

.on{ 
  color: #f10b2e; 
  border-bottom: 5rpx solid #f10b2e;
  font-size: 38rpx;
  } 
 
.swiper-box{ 
  /* background-color: #fff;   */
  display: block; 
     height:100%;   
   width: 100%;
  overflow: hidden;  
 } 

.jianjie{
  width: 100%;
  /* background: pink; */
  padding: 30rpx;
  box-sizing: border-box;
  background-color: white; 
  margin-bottom: 20rpx;
}
.jianjie image{
  width: 100%;
  height: 200rpx
}
.jianjie .jianjie-word{
  text-indent:2em;
