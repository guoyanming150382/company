/* pages/user/user.wxss */

page,.mine-wrapper {
  background-color: #eee;
}
.avatar-wrapper .avatar {
  margin: 0 auto;
  text-align: center;
  height: 180rpx;
  position: relative
}
.avatar-wrapper .text {
  color: #fff;
}

.avatar-wrapper .avatar image {
  width: 180rpx;
  height: 180rpx;
  position: absolute;
  top: 90rpx;
  left: 38%
}
.menu_container {
     display: flex; 
    /* flex-wrap: wrap; */
    width: 100%;
    background-color: #fff;
    margin: 20rpx 0;
}


.menu_item {
    width: 25%;
    padding: 30rpx;
    /* display: flex; */
    overflow: hidden;
    flex-direction: column;
    box-sizing: border-box;
    text-align: center;
}
.menu_icon {
  float: left;
    width: 100%;
    /* height: 40px; */
    height: 128rpx;
}
.menu_item .text {
  font-size: 26rpx;
}


.weui-cells {
  position: relative;
}
.weui-cell {
  padding: 20rpx 0;
  margin: 0 20rpx 20rpx;
  background-color: #fff;
  border: 1px dashed #ccc;
  border-radius: 40rpx; 
  margin-top:20rpx; 
}
.weui-cell__bd {
  float: left; 
  padding-left: 30rpx;
  font-size: 30rpx;
}
.weui-cell__hd {
  height: 40rpx;
}
.weui-cell__hd image {
  float: right; 
  margin-right: 20px;
  vertical-align: middle; 
  height: 30rpx;
  width: 50rpx;
}
.map{
  padding: 20rpx;
  box-sizing: border-box;
  margin-top: 30rpx;
}
.map image{
  width: 100%;
}

.d1{
  padding: 30rpx;
  box-sizing: border-box;
}
