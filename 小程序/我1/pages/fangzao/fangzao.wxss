/* pages/fangzao/fangzao.wxss */
.all{
  padding: 30rpx;
  box-sizing: border-box;
  width: 100%;
  font-size: 30rpx;
}

form view{
  width:100%;
  height:100rpx;
  border-bottom:2rpx solid #eee;
  line-height:100rpx;
  position: relative;
}
form view input{
  width: 70%;
  height: 100%;
  margin-left: 200rpx
}
form view text{
  position: absolute;
  top: 0rpx;
}
form view text text{
  color: red
}
.v1{
  position: absolute;
  top: 20rpx
}
.v2{
  position: absolute;
  top: -15rpx;
  left: 100rpx;
  font-size: 30rpx;
  font-weight: bolder
}
.v3{
  position: absolute;
  top: 28rpx;
  left: 100rpx;
  font-size: 26rpx;
  color: gray
}