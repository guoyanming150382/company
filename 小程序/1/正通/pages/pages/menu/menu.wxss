/*分类小项*/
.sortpage .sortsub {
	width: auto;
	height: 100%;
	margin-left: 180rpx;
	overflow-y: scroll;
	/*overflow-scrolling: touch;*/

	/*-webkit-overflow-scrolling: touch;*/
}

.sortpage .sortsub .panel {
  width: 100%;
  box-sizing: border-box;
	padding: 0 22rpx 0 26rpx;
}

.sortpage .sortsub .panel .h4 {
  width: 100%;
	font-size: 24rpx;
	color: #888;
	line-height: 1;
	padding: 40rpx 0 20rpx;
}

.sortpage .sortsub .ul {
	overflow: hidden;
}

.sortpage .sortsub .view {
	width: 50%;
	float: left;
}

.sortpage .sortsub .view text {
	display: block;
	text-align: center;
	margin: 10rpx 0 18rpx;
	font-size: 24rpx;
	color: #333;
}

.sortpage .sortsub .hot .ul {
	border-top: 1px solid #e0e0e0;
	border-left: 1px solid #e0e0e0;
}

.sortpage .sortsub .hot .view {
	height: 98rpx;
	line-height: 98rpx;
	text-align: center;
	border-right: 1px solid #e0e0e0;
	border-bottom: 1px solid #e0e0e0;
	/*-webkit-box-sizing: border-box;*/
	box-sizing: border-box;
}

.sortpage .sortsub .hot navigator {
	color: #252525;
	font-size: 24rpx;
}

