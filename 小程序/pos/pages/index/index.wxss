page {
  background-color: #f5f5f5;
}
.swiper {
  height: 400rpx;
  width: 100%;
}

.swiper-image {
  height: 100%;
  width: 100%;
}

.swiper-tab{ 
  width: 100%; 
  border-bottom: 2rpx solid #eeeeee; 
  padding: 30rpx 0;
  /* text-align: center;  */
  line-height: 80rpx;} 
.swiper-tab-item{ 
  font-size: 36rpx; 
  padding-left: 30rpx;
  display: inline-block; 
  width: 50%; 
  color: #666666; 
  height: 80rpx;
  box-sizing: border-box;
  position: relative;
} 
.on{ 
  color: #fff; 
  border-radius: 40rpx;
  background-color: #f10b2e;

  } 
 
.swiper-box{ 
  background-color: #fff;  
  display: block; 
  height: 100%;
  width: 100%;
  overflow: hidden; 
 } 





.menu_pic {
  overflow: hidden;
  margin: 10rpx;
  /* margin-top: 80rpx; */
  border-left: 1px dashed #ccc;
  border-top: 1px dashed #ccc;
}
.menu_pic .goods {
  box-sizing: border-box;
  float: left;
  padding: 10rpx;
  border-bottom: 1px dashed #ccc;
  border-right: 1px dashed #ccc;
  
}
.menu_pic .goods .img {
  height: 250rpx;
}

.text {
  display: block;
  line-height: 50rpx;
  font-size: 30rpx;
  text-indent: 2em;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
}
